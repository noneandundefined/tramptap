<UserControl x:Class="tramptap.UI.Components.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tramptap.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="854" d:DesignWidth="480"
             Background="#fff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#007cff" Margin="6" MaxHeight="70" CornerRadius="7" Padding="15 7" VerticalAlignment="Center" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Ваш уровень" Style="{StaticResource Font}" Foreground="#fff" FontSize="20" />

                        <Border Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" 
                                CornerRadius="1000" BorderBrush="#004b9a" BorderThickness="3"
                                Width="42" Height="42">
                            <Label Content="4" Style="{StaticResource Font}" Foreground="#fff" FontSize="23" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Top" Height="39" Margin="0,-5,0,0" />
                        </Border>
                    </Grid>

                </Border>

                <Border Grid.Row="1" Background="#007cff" Margin="6" MaxHeight="70" CornerRadius="7" Padding="15 9" VerticalAlignment="Center" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Еще собрать голосов" Style="{StaticResource Font}" Foreground="#fff" FontSize="20" />

                        <Border Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <Label Content="324 млн." Style="{StaticResource Font}" Foreground="#fff" FontSize="23" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Top" Height="39" Margin="0,-5,0,0" />
                        </Border>
                    </Grid>

                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
