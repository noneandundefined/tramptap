<UserControl x:Class="tramptap.UI.Components.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tramptap.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="854" d:DesignWidth="480"
             Background="#000b1c">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#222">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Label Content="4" Style="{StaticResource Font}" Foreground="#fff" FontSize="25" />
                            <Label Content="lvl" Style="{StaticResource Font}" Foreground="#999" FontSize="19" Margin="0 6 0 0" />
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <Label Content="Еще собрать голосов" Style="{StaticResource Font}" Foreground="#fff" FontWeight="Normal" FontSize="15" />
                            <Label Content="19000" Style="{StaticResource Font}" Foreground="#999" FontSize="19" Margin="0 6 0 0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
