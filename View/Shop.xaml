<UserControl x:Class="tramptap.View.Shop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:components="clr-namespace:tramptap.UI.Components"
             xmlns:local="clr-namespace:tramptap.View"
             mc:Ignorable="d" 
             d:DesignHeight="854" d:DesignWidth="480"
             Background="#fff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Padding="10">
            <StackPanel>
                <Label Content="Скины" Style="{StaticResource Font}" FontSize="19" />

                <StackPanel></StackPanel>

                <Label Content="Улучшения" Style="{StaticResource Font}" FontSize="19" />

                <StackPanel>
                    <Border Cursor="Hand" Background="#eff0f2" BorderBrush="#ccc" BorderThickness="1" Padding="10" Margin="0 10 0 0" CornerRadius="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Border BorderThickness="1" BorderBrush="#999" CornerRadius="1000" Width="40" Height="40">
                                    <Image Source="pack://application:,,,/Public/icons/chevrons-up.png" Width="24" />
                                </Border>
                                <StackPanel>
                                    <Label Content="+1000" Style="{StaticResource Font}" FontSize="15" FontWeight="Medium" Margin="10 -5 0 -4" />
                                    <Label Content="Увеличение энергии" Style="{StaticResource Font}" FontWeight="Light" FontSize="14" Margin="10 -5 0 -5" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <Label Content="- 100" Style="{StaticResource Font}" FontSize="15" Margin="10 0 -4 0" Foreground="#006eff" FontWeight="Medium" />
                                <Label Content="AUDI" FontSize="12" Margin="0 0 0 0" Foreground="#006eff" FontWeight="Medium" VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                             To="#fff" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                             To="#eff0f2" Duration="0:0:0.07"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>

                    <Border Cursor="Hand" Background="#eff0f2" BorderBrush="#ccc" BorderThickness="1" Padding="10" Margin="0 10 0 0" CornerRadius="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Border BorderThickness="1" BorderBrush="#999" CornerRadius="1000" Width="40" Height="40">
                                    <Image Source="pack://application:,,,/Public/icons/chevrons-up.png" Width="24" />
                                </Border>
                                <StackPanel>
                                    <Label Style="{StaticResource Font}" FontSize="15" FontWeight="Medium" Margin="10 -5 0 -4" x:Name="TapCountPay" />
                                    <Label Content="Увеличение тапа" Style="{StaticResource Font}" FontWeight="Light" FontSize="14" Margin="10 -5 0 -5" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <Label Style="{StaticResource Font}" FontSize="15" Margin="10 0 -4 0" Foreground="#006eff" FontWeight="Medium" x:Name="PayMoneyForTap" />
                                <Label Content="AUDI" FontSize="12" Margin="0 0 0 0" Foreground="#006eff" FontWeight="Medium" VerticalAlignment="Center" />
                            </StackPanel>
                        </Grid>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#fff" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#eff0f2" Duration="0:0:0.07"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <components:Panel Grid.Row="1" />
    </Grid>
</UserControl>
